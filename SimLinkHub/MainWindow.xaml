<Window x:Class="SimLinkHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SimLinkHub.ViewModels"
        xmlns:helpers="clr-namespace:SimLinkHub.Helpers"
        mc:Ignorable="d"
        Title="SimLink Hub" Height="450" Width="600"
        Background="#F5F5F7">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <helpers:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <helpers:ConnectionTextConverter x:Key="ConnectionTextConverter"/>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="SimLink Hub Control" FontSize="26" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" Foreground="#333"/>

            <Border Background="White" Padding="15" CornerRadius="8" Margin="0,5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="15" Height="15" Margin="0,0,10,0"
                             Fill="{Binding IsSimConnected, Converter={StaticResource BooleanToColorConverter}}"/>
                    <TextBlock Text="Simulator:" FontWeight="SemiBold" Width="100" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IsSimConnected, Converter={StaticResource ConnectionTextConverter}}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="15" CornerRadius="8" Margin="0,5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="15" Height="15" Margin="0,0,10,0"
                             Fill="{Binding IsArduinoConnected, Converter={StaticResource BooleanToColorConverter}}"/>
                    <TextBlock Text="Arduino:" FontWeight="SemiBold" Width="100" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IsArduinoConnected, Converter={StaticResource ConnectionTextConverter}}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <ItemsControl ItemsSource="{Binding ActiveInstruments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Width="120" VerticalAlignment="Center" FontWeight="Bold"/>

                                <Button Content="0%" Width="50" Margin="5,0" 
                            Click="TestButton_Click" Tag="0"/>
                                <Button Content="50%" Width="50" Margin="5,0" 
                            Click="TestButton_Click" Tag="50"/>
                                <Button Content="100%" Width="50" Margin="5,0" 
                            Click="TestButton_Click" Tag="100"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Text="{Binding StatusMessage}" 
                       FontStyle="Italic" 
                       Foreground="#888" 
                       Margin="0,20,0,0" 
                       TextAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>